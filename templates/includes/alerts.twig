{% set classfromlabel = {'error':'danger', 'warning':'warning', 'info':'info', 'success':'success'} %}
{% for label,messages in app.flashes %}
	{% for message in messages %}
		<div class="alert alert-{{ classfromlabel[label] }} alert-dismissible fade show" role="alert">
			{{ message|raw }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
{% endfor %}
