<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="{{ asset('build/images/favicon.ico') }}" />
    <title>{% block title %}DOI2PMH - {% endblock %}</title>
    <meta name="description" content="DOI2PMH Website">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column {% block body_classes %}{% endblock %}">
{% block body %}
    <header class="mb-4">
        <div class="container-fluid">
            {% block body_header %}
                {% include 'base/header.html.twig' %}
            {% endblock %}
        </div>
    </header>
    <main role="main">
        {% block main %}
            {% include 'base/flash.html.twig' %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-10 mx-auto p-3">
                        {% block admin_content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        {% endblock %}
    </main>
    <footer class="mt-auto">
        <div class="container-fluid align-self-end">
            {% block footer %}
                {% include 'base/footer.html.twig' %}
            {% endblock %}
        </div>
    </footer>
{% endblock %}
<script>
    window.doi2pmh = window.doi2pmh || {};
    doi2pmh.params = doi2pmh.params || {};
    doi2pmh.params.locale = "{{ app.request.locale }}";
    {% block init_javascripts %}{% endblock %}
    {% include 'base/translations.html.twig' %}
</script>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
