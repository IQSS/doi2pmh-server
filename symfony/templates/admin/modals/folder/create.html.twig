{% form_theme folderCreateForm 'bootstrap_4_horizontal_layout.html.twig' %}
<div class="modal fade" id="folderCreateModal" tabindex="-1" role="dialog" aria-labelledby="folderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="folderModalLabel">{{ 'admin.form.folder.add.title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(folderCreateForm, {action: path('folder_create', {folder: folder.id}), method: 'POST'}) }}
                {{ form_row(folderCreateForm._token, {id: 'folder_create_token'}) }}
                {{ form_row(folderCreateForm.name, {id: 'folder_create_name'}) }}
            </div>
            <div class="modal-footer">
                {{ form_widget(folderCreateForm.submit, {id: 'folder_create_submit'}) }}
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'admin.modal.cancel'|trans }}</button>
            </div>
            {{ form_end(folderCreateForm) }}
        </div>
    </div>
</div>
