{% form_theme doiCreateForm 'bootstrap_4_horizontal_layout.html.twig' %}
<div class="modal fade" id="doiCreateModal" tabindex="-1" role="dialog" aria-labelledby="folderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="folderModalLabel">{{ 'admin.form.doi.add.title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(doiCreateForm, {action: path('doi_create', {folder: folder.id}), method: 'POST'}) }}
                {{ form_row(doiCreateForm._token, {id: 'doi_create_token'}) }}
                {{ form_row(doiCreateForm.uri, {id: 'doi_create_uri', attr: {class: 'uri'}}) }}
                <div class="invalid-feedback" id="error_block_create" style="display: none">
                    {{ 'admin.form.doi.uri.invalid'|trans }}
                </div>
                {{ form_row(doiCreateForm.citation, {id: 'doi_create_citation', attr: {class: 'citation'}}) }}
            </div>
            <div class="modal-footer">
                {{ form_widget(doiCreateForm.submit, {id: 'doi_create_submit', attr: {class: 'doi_submit btn btn-primary'}}) }}
                <button class="btn btn-primary spinner" style="display: none" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'admin.modal.cancel'|trans }}</button>
            </div>
            {{ form_end(doiCreateForm) }}
        </div>
    </div>
</div>
